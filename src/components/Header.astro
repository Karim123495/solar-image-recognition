---
// Header组件
---

<header class="bg-white shadow-sm border-b border-gray-200">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <!-- Logo -->
      <div class="flex items-center">
        <a href="/" class="flex items-center space-x-2">
          <div class="w-8 h-8 bg-gradient-to-r from-primary-600 to-solar-500 rounded-lg flex items-center justify-center">
            <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 2L3 7v11a1 1 0 001 1h12a1 1 0 001-1V7l-7-5zM8 15v-4h4v4H8z" clip-rule="evenodd" />
            </svg>
          </div>
          <span class="text-xl font-bold text-gradient">光伏识别</span>
        </a>
      </div>
      
      <!-- 导航菜单 -->
      <nav class="hidden md:flex space-x-8">
        <a href="/" class="text-gray-700 hover:text-primary-600 px-3 py-2 text-sm font-medium transition-colors">首页</a>
        <a href="/recognition" class="text-gray-700 hover:text-primary-600 px-3 py-2 text-sm font-medium transition-colors">图像识别</a>
        <a href="/history" class="text-gray-700 hover:text-primary-600 px-3 py-2 text-sm font-medium transition-colors">识别历史</a>
        <a href="/about" class="text-gray-700 hover:text-primary-600 px-3 py-2 text-sm font-medium transition-colors">关于我们</a>
      </nav>
      
      <!-- 移动端菜单按钮 -->
      <div class="md:hidden">
        <button id="mobile-menu-button" class="text-gray-700 hover:text-primary-600 p-2">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
    
    <!-- 移动端菜单 -->
    <div id="mobile-menu" class="md:hidden hidden border-t border-gray-200">
      <div class="px-2 pt-2 pb-3 space-y-1">
        <a href="/" class="block px-3 py-2 text-gray-700 hover:text-primary-600 text-sm font-medium">首页</a>
        <a href="/recognition" class="block px-3 py-2 text-gray-700 hover:text-primary-600 text-sm font-medium">图像识别</a>
        <a href="/history" class="block px-3 py-2 text-gray-700 hover:text-primary-600 text-sm font-medium">识别历史</a>
        <a href="/about" class="block px-3 py-2 text-gray-700 hover:text-primary-600 text-sm font-medium">关于我们</a>
      </div>
    </div>
  </div>
</header>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    
    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener('click', function() {
        mobileMenu.classList.toggle('hidden');
      });
    }
  });
</script>
